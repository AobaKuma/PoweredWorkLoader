    </recipeMaker>
    <costList>
      <Steel>100</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="Exosuit.CompProperties_ExosuitModule">
        <EquipedThingDef>PWL_Apparel_Drill</EquipedThingDef>
        <occupiedSlots>
          <li>ArmRight</li>
        </occupiedSlots>
      </li>
    </comps>
  </ThingDef>

