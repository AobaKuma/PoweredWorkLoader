<Defs>
  <ThingDef ParentName="PWL_ModuleBase">
    <defName>PWL_Module_Drill</defName>
    <label>powered impact drill</label>
    <description>An impact drill used by a heavy-duty exoskeleton, commonly in use by mining projects during colonial activities.</description>
    <descriptionHyperlinks>
      <ThingDef>PWL_Apparel_Drill</ThingDef>
    </descriptionHyperlinks>
    <graphicData>
      <texPath>Things/PWL_Weapons/tool_drill</texPath>
      <drawSize>1.5</drawSize>
    </graphicData>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <Mass>20.50</Mass>
    </statBases>
    <recipeMaker>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <researchPrerequisites>
        <li>WG_HeavyExoskeleton</li>
      </researchPrerequisites>
      <effectWorking>Repair</effectWorking>
      <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
      <workAmount>45000</workAmount>
